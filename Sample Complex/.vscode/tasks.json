{
	"version": "2.0.0",
	"tasks": [
		/*
		{
			"type": "haxe",
			"args": "active configuration",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		*/
		{
            "label": "Debug",
            "type": "shell",
            "command": "haxe build.hxml",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$haxe",
            "group": "build"
        },
        {
            "label": "Release",
            "type": "shell",
            "command": "haxe --no-traces build.hxml",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": "$haxe",
            "group": "build"
        }
	]
}